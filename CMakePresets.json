{
  "$schema": "https://cmake.org/cmake/help/latest/manual/cmake-presets.7.html#schema",
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "desktop-x86_64",
      "displayName": "Desktop (x86_64 cross)",
      "description": "Cross-compile desktop build to x86_64 using GNU cross toolchain.",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build-pc-x86_64",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/tools/toolchains/x86_64-linux-gnu.cmake",
        "DESKTOP_FORCE_X86_64": "ON",
        "USE_SOUND": "ON",
        "STRICT_ARCH_CHECK": "ON"
      },
      "environment": {
        "CC": "",
        "CXX": "",
        "LD": "",
        "CFLAGS": "",
        "CXXFLAGS": "",
        "LDFLAGS": "",
        "CPPFLAGS": ""
      }
    },
    {
      "name": "android-arm64-api29",
      "displayName": "Android (arm64-v8a, API 29)",
      "description": "Build for Android arm64-v8a with API level 29.",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build-android",
      "cacheVariables": {
        "ANDROID": "ON",
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_PLATFORM": "29"
      },
      "environment": {
        "ANDROID_NDK": "$env{ANDROID_NDK}"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-desktop-x86_64",
      "displayName": "Build desktop (x86_64 cross)",
      "configurePreset": "desktop-x86_64"
    },
    {
      "name": "build-android-arm64-api29",
      "displayName": "Build Android (arm64-v8a, API 29)",
      "configurePreset": "android-arm64-api29"
    }
  ]
}
